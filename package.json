{
  "name": "fraudshield",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "start:api": "pnpm --filter @fraudshield/api start",
    "start:dashboard": "pnpm --filter @fraudshield/dashboard start",
    "start:admin": "pnpm --filter @fraudshield/admin start",
    "build:api": "pnpm --filter @fraudshield/api build && pnpm --filter @fraudshield/api exec prisma generate",
    "build:dashboard": "pnpm --filter @fraudshield/dashboard build",
    "build:admin": "pnpm --filter @fraudshield/admin build"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "yaml": "^2.7.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
