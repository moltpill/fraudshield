// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// SQLite for development, PostgreSQL for production
// Switch via DATABASE_URL env var
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite doesn't support enums, so we use String with validation at app level
// Tier values: FREE, STARTER, GROWTH, SCALE, ENTERPRISE
// AccountStatus values: active, suspended, cancelled  
// ApiKeyStatus values: active, revoked

/// Customer account
model Account {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?  // bcrypt hashed password for dashboard login
  tier      String   @default("FREE") // FREE, STARTER, GROWTH, SCALE, ENTERPRISE
  status    String   @default("active") // active, suspended, cancelled
  createdAt DateTime @default(now())

  // Relations
  apiKeys      ApiKey[]
  usageRecords UsageRecord[]
  subscription Subscription?
  payments     Payment[]

  @@map("accounts")
}

/// API key for SDK authentication
model ApiKey {
  id             String   @id @default(cuid())
  accountId      String
  key            String   @unique
  name           String
  status         String   @default("active") // active, revoked
  allowedDomains String   @default("[]") // JSON array stored as string for SQLite
  createdAt      DateTime @default(now())

  // Relations
  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  visitorEvents VisitorEvent[]

  @@index([accountId])
  @@index([key])
  @@map("api_keys")
}

/// Unique visitor identified by fingerprint
model Visitor {
  id         String   @id @default(cuid())
  fingerprint String  @unique
  firstSeen  DateTime
  lastSeen   DateTime
  visitCount Int      @default(1)

  // Relations
  events VisitorEvent[]

  @@index([fingerprint])
  @@map("visitors")
}

/// Individual analyze() request/event
model VisitorEvent {
  id           String   @id @default(cuid())
  visitorId    String
  apiKeyId     String
  signals      String   // JSON stored as string for SQLite
  riskScore    Int
  isBot        Boolean  @default(false)
  isVpn        Boolean  @default(false)
  isTor        Boolean  @default(false)
  isDatacenter Boolean  @default(false)
  ip           String?  // Client IP address (IPv4 or IPv6)
  timestamp    DateTime @default(now())

  // Relations
  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
  apiKey  ApiKey  @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([visitorId])
  @@index([apiKeyId])
  @@index([timestamp])
  @@map("visitor_events")
}

/// Daily usage tracking per account
model UsageRecord {
  id           String   @id @default(cuid())
  accountId    String
  date         DateTime // Truncated to day for grouping
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, date])
  @@index([accountId])
  @@index([date])
  @@map("usage_records")
}

/// Tier limits configuration
model TierLimit {
  id           String @id @default(cuid())
  tier         String @unique // FREE, STARTER, GROWTH, SCALE, ENTERPRISE
  monthlyLimit Int    // Max requests per month
  features     String // JSON stored as string for SQLite

  @@map("tier_limits")
}

/// Admin user for the admin panel (separate from customer accounts)
/// Role values: SUPER_ADMIN, SUPPORT, READONLY
model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // bcrypt hashed password
  role      String   @default("READONLY") // SUPER_ADMIN, SUPPORT, READONLY
  createdAt DateTime @default(now())

  // Relations
  auditLogs AuditLog[]

  @@map("admin_users")
}

/// Subscription via Stitch Express recurring billing
/// Status values: pending, active, past_due, cancelled, expired
model Subscription {
  id                   String    @id @default(cuid())
  accountId            String    @unique
  stitchSubscriptionId String?   @unique
  tier                 String    // STARTER, GROWTH, SCALE, ENTERPRISE
  status               String    @default("pending") // pending, active, past_due, cancelled, expired
  currentPeriodEnd     DateTime?
  cancelledAt          DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // Relations
  account  Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([accountId])
  @@index([status])
  @@map("subscriptions")
}

/// Payment record for billing history
/// Status values: pending, completed, failed, refunded
model Payment {
  id             String   @id @default(cuid())
  accountId      String
  subscriptionId String?
  stitchPaymentId String? @unique
  amount         Int      // in cents (ZAR)
  tier           String   // tier being paid for
  status         String   @default("pending") // pending, completed, failed, refunded
  eventId        String?  @unique // for idempotent webhook processing
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  account      Account       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])

  @@index([accountId])
  @@index([status])
  @@map("payments")
}

/// Audit log for admin actions
model AuditLog {
  id          String   @id @default(cuid())
  adminId     String
  action      String   // CREATE_ACCOUNT, SUSPEND_ACCOUNT, UNSUSPEND_ACCOUNT, CHANGE_TIER, REVOKE_KEY, CREATE_KEY, DELETE_ACCOUNT, IMPERSONATE, UPDATE_ACCOUNT
  targetType  String   // account, api_key, admin
  targetId    String
  details     String   @default("{}") // JSON stored as string for SQLite
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())

  // Relations
  admin AdminUser @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
