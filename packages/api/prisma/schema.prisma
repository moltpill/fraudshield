// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// SQLite for development, PostgreSQL for production
// Switch via DATABASE_URL env var
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite doesn't support enums, so we use String with validation at app level
// Tier values: FREE, STARTER, GROWTH, SCALE, ENTERPRISE
// AccountStatus values: active, suspended, cancelled  
// ApiKeyStatus values: active, revoked

/// Customer account
model Account {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  tier      String   @default("FREE") // FREE, STARTER, GROWTH, SCALE, ENTERPRISE
  status    String   @default("active") // active, suspended, cancelled
  createdAt DateTime @default(now())

  // Relations
  apiKeys      ApiKey[]
  usageRecords UsageRecord[]

  @@map("accounts")
}

/// API key for SDK authentication
model ApiKey {
  id             String   @id @default(cuid())
  accountId      String
  key            String   @unique
  name           String
  status         String   @default("active") // active, revoked
  allowedDomains String   @default("[]") // JSON array stored as string for SQLite
  createdAt      DateTime @default(now())

  // Relations
  account       Account        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  visitorEvents VisitorEvent[]

  @@index([accountId])
  @@index([key])
  @@map("api_keys")
}

/// Unique visitor identified by fingerprint
model Visitor {
  id         String   @id @default(cuid())
  fingerprint String  @unique
  firstSeen  DateTime
  lastSeen   DateTime
  visitCount Int      @default(1)

  // Relations
  events VisitorEvent[]

  @@index([fingerprint])
  @@map("visitors")
}

/// Individual analyze() request/event
model VisitorEvent {
  id           String   @id @default(cuid())
  visitorId    String
  apiKeyId     String
  signals      String   // JSON stored as string for SQLite
  riskScore    Int
  isBot        Boolean  @default(false)
  isVpn        Boolean  @default(false)
  isTor        Boolean  @default(false)
  isDatacenter Boolean  @default(false)
  ip           String?  // Client IP address (IPv4 or IPv6)
  timestamp    DateTime @default(now())

  // Relations
  visitor Visitor @relation(fields: [visitorId], references: [id], onDelete: Cascade)
  apiKey  ApiKey  @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)

  @@index([visitorId])
  @@index([apiKeyId])
  @@index([timestamp])
  @@map("visitor_events")
}

/// Daily usage tracking per account
model UsageRecord {
  id           String   @id @default(cuid())
  accountId    String
  date         DateTime // Truncated to day for grouping
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, date])
  @@index([accountId])
  @@index([date])
  @@map("usage_records")
}

/// Tier limits configuration
model TierLimit {
  id           String @id @default(cuid())
  tier         String @unique // FREE, STARTER, GROWTH, SCALE, ENTERPRISE
  monthlyLimit Int    // Max requests per month
  features     String // JSON stored as string for SQLite

  @@map("tier_limits")
}
